<div class=container>
  <div class="jumbotron">
    <h1 class="display-4">Burgers</h1>
    <p class="lead">Have it your way.</p>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-6">
      <h2>Burgers that are not yet eaten.</h2>
      <ul>
        {{#each burgers}}
        {{#unless burger_eaten}}
        {{> burgers/burger-block eaten=true}}
        {{/unless}}
       
        {{/each}}
      </ul>
    </div>

    <div class="col-6">
      <h2>Burgers that have been devoured!</h2>
      <ul>
        {{#each burgers}}
        {{#if burger_eaten}}
        {{> burgers/burger-block eaten=false}}
        {{/if}}
     
        {{/each}}

      </ul>

    </div>
  </div>
</div>


<div class="container">


  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="burger_name">
    </div>

    <div class="form-group">
      <label for="burger_eaten">Burger Eaten?</label><br>
      <input type="radio" name="burger_eaten" value="1" checked> Devoured already.<br>
      <input type="radio" name="burger_eaten" value="0"> Not yet enjoyed.
    </div>

    <button class="btn btn-primary" type="submit">Add Burger</button>
  </form>

</div>